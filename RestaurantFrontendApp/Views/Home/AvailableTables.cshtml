@model AvailableTablesViewModel

@{
    ViewData["Title"] = ViewData["Title"] ?? "Available Tables";

    var availableBySeats = Model.AvailableTables
        .Where(t => t.TableSeats >= Model.SelectedSeats)
        .OrderBy(t => t.TableSeats)
        .ThenBy(t => t.TableID)
        .ToList();

    var selectedHour = Model.SelectedHour;
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<form method="get" asp-action="AvailableTables" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-12 col-md-4">
            <label class="form-label">Date</label>
            <input class="form-control" type="date" name="date" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
        </div>

        <div class="col-12 col-md-4">
            <label class="form-label">Time</label>
            <select class="form-select" name="hour" onchange="this.form.submit()">
                @foreach (var h in Model.AvailableHours)
                {
                    <option value="@h" selected="@(selectedHour == h)">@h:00</option>
                }
            </select>
        </div>

        <div class="col-12 col-md-4">
            <label class="form-label">Seats</label>
            <div class="d-flex gap-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="seats" id="seats2" value="2" checked="@(Model.SelectedSeats == 2)" onchange="this.form.submit()" />
                    <label class="form-check-label" for="seats2">2 seats</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="seats" id="seats4" value="4" checked="@(Model.SelectedSeats == 4)" onchange="this.form.submit()" />
                    <label class="form-check-label" for="seats4">4 seats</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="seats" id="seats8" value="8" checked="@(Model.SelectedSeats == 8)" onchange="this.form.submit()" />
                    <label class="form-check-label" for="seats8">8 seats</label>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="mb-4">
    <h5 class="mb-2">Available tables</h5>

    @if (Model.SelectedHour is null)
    {
        <div class="alert alert-warning">No available times for the selected date.</div>
    }
    else if (availableBySeats.Count == 0)
    {
        <div class="alert alert-warning">No tables available for @Model.SelectedSeats seats at @Model.SelectedHour:00.</div>
    }
    else
    {
        <div class="row g-2">
            @foreach (var t in availableBySeats)
            {
                <div class="col-12 col-md-6">
                    <div class="border rounded p-2 d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Table @t.TableID</strong>
                            <span class="text-muted">(@t.TableSeats seats)</span>
                        </div>
                        <span class="badge bg-success">Available</span>
                    </div>
                </div>
            }
        </div>
    }
</div>

<form method="post" asp-action="ConfirmAvailableTable" class="mb-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SelectedDate" />
    <input type="hidden" asp-for="SelectedSeats" />
    <input type="hidden" asp-for="SelectedHour" />

    <div class="row g-3 align-items-end">
        <div class="col-12 col-md-6">
            <label class="form-label">Choose a table (optional)</label>
            <select class="form-select" asp-for="SelectedTableID">
                <option value="">Auto</option>
                @foreach (var t in availableBySeats)
                {
                    <option value="@t.TableID">Table @t.TableID (@t.TableSeats seats)</option>
                }
            </select>
        </div>

        <div class="col-12 col-md-6">
            <button type="submit" class="btn btn-primary w-100" disabled="@(Model.SelectedHour is null || availableBySeats.Count == 0)">Confirm</button>
        </div>
    </div>
</form>

@if (Model.ShowBookingForm)
{
    <div class="card">
        <div class="card-body py-2">
            <form method="post" asp-action="BookAvailableTable" id="bookingForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SelectedDate" />
                <input type="hidden" asp-for="SelectedSeats" />
                <input type="hidden" asp-for="SelectedHour" />
                <input type="hidden" asp-for="SelectedTableID" />

                <div class="row g-2">
                    <div class="col-12 col-md-6">
                        <div class="d-flex flex-column gap-2">
                            <div>
                                <input class="form-control form-control-sm" asp-for="Name" id="nameInput" placeholder="Name" />
                                <span class="text-danger small" asp-validation-for="Name"></span>
                            </div>
                            <div>
                                <input class="form-control form-control-sm" asp-for="Phone" id="phoneInput" placeholder="Phone" />
                                <span class="text-danger small" asp-validation-for="Phone"></span>
                            </div>
                            <div>
                                <input class="form-control form-control-sm" asp-for="Email" id="emailInput" placeholder="Email" />
                                <span class="text-danger small" asp-validation-for="Email"></span>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-success btn-sm w-100" id="bookBtn" disabled>Book</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="p-2 h-100">
                            <div class="small fw-bold mb-2">Booking Details</div>
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Date:</span>
                                <strong class="small">@Model.SelectedDate.ToString("yyyy-MM-dd")</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Time:</span>
                                <strong class="small">@Model.SelectedHour:00 - @(Model.SelectedHour + 1):00</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted small">Seats:</span>
                                <strong class="small">@Model.SelectedSeats</strong>
                            </div>
                            @if (Model.SelectedTableID is not null)
                            {
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted small">Table:</span>
                                    <strong class="small">@Model.SelectedTableID</strong>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const nameInput = document.getElementById('nameInput');
            const phoneInput = document.getElementById('phoneInput');
            const emailInput = document.getElementById('emailInput');
            const bookBtn = document.getElementById('bookBtn');

            if (!bookBtn) return;

            const toggle = () => {
                const ok = (nameInput?.value || '').trim().length > 0
                    && (phoneInput?.value || '').trim().length > 0
                    && (emailInput?.value || '').trim().length > 0;
                bookBtn.disabled = !ok;
            };

            nameInput?.addEventListener('input', toggle);
            phoneInput?.addEventListener('input', toggle);
            emailInput?.addEventListener('input', toggle);
            toggle();
        })();
    </script>
}
