@using System.IdentityModel.Tokens.Jwt
@using System.Linq
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
@{
    var title = ViewData["Title"] ?? "Kifo Restaurant";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    
    // Helper to check if a nav link should be active
    bool IsNavLinkActive(string controller, string action = null)
    {
        if (currentController != controller) return false;
        
        // For AvailableTables, also highlight when on ConfirmAvailableTable or BookAvailableTable
        if (controller == "Home" && action == "AvailableTables")
        {
            return currentAction == "AvailableTables" || 
                   currentAction == "ConfirmAvailableTable" || 
                   currentAction == "BookAvailableTable";
        }
        
        return action == null || currentAction == action;
    }
    
    string NavLinkClass(string controller, string action = null) =>
        IsNavLinkActive(controller, action) ? "nav-link active fw-semibold text-warning" : "nav-link";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Explore our diverse menu at Kifo, featuring delicious global dishes and drinks.">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ResturangFrontEnd.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 justify-content-center">
            <div class="d-flex">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ℛestaurant 𝒦ifo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="@(NavLinkClass("Home", "Index"))" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="@(NavLinkClass("Home", "Menu"))" asp-area="" asp-controller="Home" asp-action="Menu">Our Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="@(NavLinkClass("Home", "AvailableTables"))" asp-area="" asp-controller="Home" asp-action="AvailableTables">Available Tables</a>
                        </li>
                        @{
                            var token = Context.Request.Cookies["jwt"];
                            var isAdmin = false;

                            if (!string.IsNullOrEmpty(token))
                            {
                                try
                                {
                                    var handler = new JwtSecurityTokenHandler();
                                    var jwt = handler.ReadJwtToken(token);
                                    isAdmin = jwt.Claims.Any(c => c.Type == ClaimTypes.Role && c.Value == "Admin");
                                }
                                catch
                                {
                                    isAdmin = false; 
                                }
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1 mb-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-dark text-light text-center footer mt-auto pb-1">
        <div class="container" style="line-height: normal">
            <p class="mt-3"><span class="fw-bold">Restaurant Kifo</span> - A restaurant and booking system</p>
            <p class="d-flex gap-3 justify-content-center flex-wrap">
                <a class="link-light text-decoration-none" href="#">Github</a>
                <a class="link-light text-decoration-none" href="#">Contact</a>
                <a class="link-light text-decoration-none" href="#">Portfolio</a>
            </p>
            <p>&copy; 2026A - ResturangFrontEnd - <span><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a></span></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
