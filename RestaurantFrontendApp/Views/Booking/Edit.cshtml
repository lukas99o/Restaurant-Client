@model Booking

<a asp-action="Index" asp-controller="Booking" class="btn btn-primary mb-4">Return</a>

<h1>Edit Booking</h1>

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="TableID">Table ID</label>
        <input asp-for="TableID" class="form-control" />
        <span asp-validation-for="TableID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time">Time</label>
        <input asp-for="Time" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeEnd">Time End</label>
        <input asp-for="TimeEnd" class="form-control" />
        <span asp-validation-for="TimeEnd" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="BookingID" />
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>