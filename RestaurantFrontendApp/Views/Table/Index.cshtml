@model List<Table>

<div class="d-flex gap-3 mb-4">
    <a asp-action="Index" asp-controller="Admin" class="btn btn-primary">Return</a>
    <a asp-action="Create" asp-controller="Table" class="btn btn-primary">Create</a>
</div>

<div class="d-flex gap-2 flex-wrap">
    @foreach (var table in Model)
    {
        <div class="card" style="width:18rem">
            <div class="card-body">
                <h5 class="card-title">Table Number: @table.TableID</h5>

                <p class="card-text">Table Seats: @table.TableSeats</p>
                <p class="card-text">Table Available: @table.IsAvailable</p>
                <a asp-controller="Table" asp-action="Edit" asp-route-id=@table.TableID class="btn btn-warning">Edit</a>

                <form method="post" asp-action="Delete" style="display:inline;">
                    <input type="hidden" name="tableID" value="@table.TableID" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </div>
        </div>
    }
</div>
