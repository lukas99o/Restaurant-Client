@model Table

<a asp-action="Index" asp-controller="Table" class="btn btn-primary mb-4">Return</a>

<h1>Edit Table</h1>

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="TableSeats">Table Seats</label>
        <input asp-for="TableSeats" class="form-control" />
        <span asp-validation-for="TableSeats" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="IsAvailable">Table Available</label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="TableID" />
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
