@model Table

<a asp-action="Index" asp-controller="Table" class="btn btn-primary mb-4">Return</a>

<h1>Create New Table</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TableSeats"></label>
        <input asp-for="TableSeats" class="form-control" />
        <span asp-validation-for="TableSeats" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="IsAvailable"></label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Create</button>
</form>

